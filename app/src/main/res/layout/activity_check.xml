<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity=""
    android:background="@color/background_color"
    tools:context=".ui.check.CheckActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="80dp"
        android:layout_marginTop="-150dp">
        <RelativeLayout
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_bg">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/virus_bg"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:contentDescription="@string/img_description" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:src="@drawable/person2"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/img_description" />
            <TextView
                android:id="@+id/app_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/banner_home"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_regular"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="18dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="48dp">
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/record_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/progress_bar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginVertical="18dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/record_status"
                    android:textColor="@color/recover_color"
                    android:textSize="22sp" />
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/text_result"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="gone"
                    android:layout_marginTop="18dp"
                    android:id="@+id/img_result"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@id/text_result"
                    android:src="@drawable/ic_baseline_warning"
                    android:contentDescription="@string/img_description" />
                <TextView
                    android:id="@+id/text_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/poppins_regular"
                    android:textAlignment="center"
                    android:text="@string/result_covid_positive"
                    android:textColor="@color/death_color"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/text_result_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/text_result"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/poppins_regular"
                    android:textAlignment="center"
                    android:text="@string/desc_covid_positive"
                    android:textColor="@color/light_text_color"
                    android:textSize="12sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/card_main"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="18dp"
            android:textAlignment="center"
            android:text="@string/guide_text"
            android:textColor="@color/accent_color2"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/guide2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_main"
            android:layout_marginBottom="18dp"
            android:textAlignment="center"
            android:text="@string/guide2_text"
            android:textColor="@color/body_text_color"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide2_text"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_play_arrow_white"
            app:borderWidth="0dp"
            app:tint="@color/white"
            android:backgroundTint="@color/death_color"
            android:contentDescription="@string/fab_description"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/white_rounded_bg"
            app:backgroundTint="@color/accent_color"
            android:text="@string/retry_btn"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_main"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="32dp"
            android:paddingHorizontal="18dp"
            android:background="@drawable/white_rounded_bg"
            app:backgroundTint="@color/white"
            android:text="@string/home_btn"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/accent_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_retry"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>