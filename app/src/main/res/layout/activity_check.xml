<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".ui.check.CheckActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardCornerRadius="80dp"
                android:layout_marginTop="-150dp">
                <RelativeLayout
                    android:layout_marginTop="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/splash_bg">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/virus_bg"
                        android:scaleType="centerCrop"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="240dp"
                        android:src="@drawable/person2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"/>
                    <TextView
                        android:id="@+id/app_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/banner_home"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_regular"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/record_label_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="200dp"
                android:text="Tap to record"
                android:textColor="@color/body_text_color"
                android:textSize="22sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_regular"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_play_arrow_white"
                android:layout_margin="16dp"
                app:borderWidth="0dp"
                app:tint="@color/white"
                android:contentDescription="fab"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>